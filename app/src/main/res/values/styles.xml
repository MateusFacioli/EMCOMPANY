<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="botaoPadrao" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#ff404e</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="fab_size">normal</item>
        <item name="fab_shadowColor">#444</item>
        <item name="elevation">6dp</item>
        <item name="fab_colorNormal">@android:color/white</item>
        <item name="fab_colorPressed">@color/colorPrimaryDark</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
